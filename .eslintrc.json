{
    "plugins": [
        "prettier"
    ],

    "extends": [
        "eslint:recommended",
        "plugin:prettier/recommended"
    ],
    "parserOptions": {
        "ecmaVersion": 2017,
        "sourceType": "module"
    },
    "env": {
        "browser": true,
        "es6": true
    },
    "ignorePatterns": [
        "node_modules/"
    ],
    "rules": {
        "prettier/prettier": "error"
    }
}